extends layout

block content
	form(action='/password', method='POST')
		div.row
			if message
				div.col-md-12
					p.alert.alert-danger #{message}
			if success
				div.col-md-12
					p.alert.alert-success #{success}
			h1.col-md-12 Change Password
			div.form-group.col-md-12
				label(for="current") Current Password
				input.form-control(type="password", id="current", name="current", placeholder="Password", required)
			div.form-group.col-md-12
				label(for="password") Password
				input.form-control(type="password", id="password", name="password", placeholder="Password", required)
			div.form-group.col-md-12
				button.btn.btn-primary.btn-lg.col-md-2(type="submit") Save Changes