extends layout

block content
	if message
		p #{message}
	form(action='/login', method='POST')
		div.row
			div.form-group.col-md-12
				label(for="username") Email
				input.form-control(type="email", id="username", name="username", placeholder="Email", required)
			div.form-group.col-md-12
				label(for="password") Password
				input.form-control(type="password", id="password", name="password", placeholder="Password", required)
			div.form-group.col-md-12
				button.btn.btn-success.col-md-2(type="submit") Login

	