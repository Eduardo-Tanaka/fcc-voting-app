extends layout

block content
	if message
		p #{message}
	form(action="/signup", method='POST')
		div.row
			div.form-group.col-md-12
				label(for="username") Name
				input.form-control(type="text", id="username", name="username", placeholder="Name", required)
			div.form-group.col-md-12
				label(for="email") Email
				input.form-control(type="email", id="email", name="email", placeholder="Email", required)
			div.form-group.col-md-12
				label(for="password") Password
				input.form-control(type="password", id="password", name="password", placeholder='Password', required)
			div.form-group.col-md-12
				input.btn.btn-success.col-md-2(type="submit", value='Sign Up')
	
			